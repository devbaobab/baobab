<% content_for :unreleased do %>

<div id='intro_background'><!--img src="intro.jpg"-->
	<%= image_tag('intro.jpg') %></div>
	<!-- input type="email" id="email_input" -->
	<%= form_for @subscription do |f| %>
		<%= f.text_field :email %>
		<!--  div id="submit_button" onclick="check_submit()">&nbsp;</div -->
		<%= f.submit " ",  :onlick => "check_submit()" %>
	<% end %>
	
	<% if flash[:notice] %>
	    <div id="notice"><%= flash[:notice] %></div>
	<% end %>


<% end %>
