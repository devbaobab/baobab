<% content_for :head do %>
<style>
#wrap
{
	display:none;
}
header
{
	display:none;
}

footer
{
	display:none;
}
body
{
	width:1024px;
	margin: 0 auto;
}
#intro_background
{
	margin-top:20px;
}

#subscription_email
{
	width:300px;
	font-size: 25px;
	position:absolute;
	left:330px;
	top:707px;
}

#submit_button
{
	width: 150px;
	font-size: 37px;
	position:absolute;
	left:664px;
	top:707px;
}

#submit_button:hover
{
	cursor:pointer;
}
input[type="submit"]
{
	
	width: 150px;
	font-size: 37px;
	position:absolute;
	left:664px;
	top:707px;
}

</style>
<script>
	function check_submit()
	{
		alert('Thanks');
		var email = document.getElementById('email_input');
		
		
		email.value = "";
	}
</script>
