<%= form_for(@user) do |f| %>
	<%= f.label :avatar %>
	<% if ! @user.avatar.nil?%>
	<%= image_tag(@user.avatar.url) %>
	<br />
	<% end %>
	<%= f.file_field :avatar %><br />
	<%= f.label :fullname %>
	<%= f.text_field :fullname %><br />
	<%= f.label :email %>
	<%= f.text_field :email %><br />
	<%= f.label :birthday %>	
	<%= f.date_select :birthday, :start_year => 1950, :end_year => Time.now.year, :default => Date.new(1980,6,18) %><br />
	<%= f.label :gender %>
	<%= f.text_field :gender %><br />	
    <%= f.submit %>
	<% if @user.role? :lecturer %>
		<p>please update your author profile</p>
		<%= render "authour_form" %>
	<% end %>
	
<% end %>
