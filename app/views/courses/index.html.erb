<% content_for :head do %>
	<!-- %= stylesheet_link_tag    "tmp_discover", :media => "all" % -->
<% end %>

<div class="container-contents02">
<section class="search-course">
	<h1 Class="search">강의탐색</h1>
	
	<ul class="search-filter">
		<li class="start"><a href="#">추천 강의</a></li><li>
		<a href="#">인기순</a></li><li>
		<a href="#">평점순</a></li><li>
			
		<a href="#" class="category" onclick="toggleCategoryList()" >카테고리</a>
			<ul class="list-category">
				<% @categories.each do |category| %>
					<li><%= link_to category.name,  courses_path(:selected_category => category.id )  %></li>
				<% end %>	
			</ul>
		</li><li>
			<fieldset class="search-course-fieldset">
				<legend>검색</legend>
				<p>
					<input type="text" />
					<a href="#" class="btn-search">검색</a>
				</p>
			</fieldset>
		</li>
	</ul>
	<div class="clear"></div>
	
	<ul class="result-course">
			<% @courses.each do |course| %>
		<li>
			<article class="lecture-summary">
				<header style="background: url('<%= course.snapshot %>') 5px 5px no-repeat;">
					<h1><%= link_to course.name, course  %></h1>
					<span class="updated">updated</span>
				</header>
				<dl>
					<dt>
						<%= link_to image_tag("@temp01.png"), course %>
						<strong><%= course.authour.fullname %></strong>
						<span>LSAT tutor</span>
					</dt>
					<dd>
						<p>
							<%= truncate(course.description, length: 230 ) %>
						</p>
					</dd>
				</dl>
				<footer>
					<span class="price"><%= course.price %>$</span>
					<span class="students"><%= course.users.size %></span>
					<span class="star"><em class="point04"><span>3/5</span></em></span>
					<div class="clear"></div>
				</footer>
			</article>
		</li>
		<% end %>
	</ul>
	<div class="clear"></div>
</section>
	
</div>
