<% content_for :head do %>
	<%= stylesheet_link_tag    "tmp_discover", :media => "all" %>
<% end %>

<div id='main_page_wrapper'>
	<div class='page_title'>
		Discover Courses
	</div>
	<div id='discover_search_form'>
		<div id='discover_tabs'>
			<div id='recommend_tab'>
				Recommend
			</div>
			<div id='popular_tab'>
				Popular
			</div>
			<div id='high_rating_tab'>
				High Rating
			</div>
		</div>
		<div id='discover_search_box'>
			<input type='text'/>
		</div>
		<button>
			Search
		</button>
	</div>
	<div id='discover_category_wrap'>
	<% @categories.each do |category| %>

		
			<div class='category_entry' id='category1'>

				<%= link_to category.name,  courses_path(:selected_category => category.id )  %>
			</div>
	
	<% end %>
	</div>
	<% @courses.each do |course| %>
	<div id='discover_lecture_wrap'>
	
		<div class='lecture_box' id='lecture1'>
				<span>
					<%= link_to image_tag(course.snapshot.url(:thumb), class: 'thumb_image'), course %>
					<!--<span><%= link_to 'View this course', course %></span>-->
				</span>

			<!--/span-->
			<span class="class_info">
				<span class="class_title"><%= course.name %></span>
				<span class="class_description"><%= truncate(course.description, length: 170) %>
					<p>Lecturer: <%= course.authour.email %></p>
					</span>
			</span>
			
		</div>
	
	</div>
	<% end %>
</div>
<div id="add_course_button">
	<%= link_to 'Add Course', new_course_path %>
</div>

