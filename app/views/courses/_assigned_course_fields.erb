			<section class="summary">
				<h1 class="subtitle">강의개요</h1>
				<p>
					<%= image_tag(take.course.big_snapshot) %>
					<span>by</span> <strong><%= take.course.authour.fullname %></strong><br />
					<%= take.course.description %>
					
					<a href="#" class="more">더 보기</a>
				</p>
			</section>


			<section class="progress">
				<h1 class="subtitle">강의진도</h1>
				<span class="progress"><em style="width: <%= take.progress %>%;">50%</em></span>
				<p><%= take.progress %>% completed</p>
			</section>

			
			<section class="lectures">
